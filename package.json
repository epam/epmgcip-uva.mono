{
    "private": true,
    "name": "uva-monorepo",
    "author": "EPAM",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "workspace:functions:build": "yarn workspace uva-functions build",
        "workspace:functions:start": "yarn workspace uva-functions start",
        "workspace:functions:lint": "yarn workspace uva-functions lint",
        "workspace:frontend:build": "yarn workspace uva-frontend build",
        "workspace:frontend:start": "yarn workspace uva-frontend dev",
        "workspace:frontend:lint": "yarn workspace uva-frontend lint",
        "workspace:shared:build": "yarn workspace uva-shared build",
        "build:shared": "run-s workspace:shared:build",
        "build:functions": "yarn build:shared && yarn workspace:functions:build",
        "build:frontend": "yarn build:shared && yarn workspace:frontend:build",
        "deploy:functions": "firebase deploy --only functions",
        "deploy:frontend": "firebase deploy --only hosting",
        "be:dev": "yarn workspace:functions:start",
        "web:dev": "yarn workspace:frontend:start",
        "test": "yarn vitest"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "jest-environment-jsdom": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "react-test-renderer": "^18.2.0",
        "rimraf": "^3.0.2",
        "vitest": "^1.3.0"
    },
    "dependencies": {}
}