{
  "private": true,
  "name": "uva-monorepo",
  "author": "EPAM",
  "license": "MIT",
  "workspaces": {
      "packages": [
          "frontend/*",
          "backend/*",
          "shared/*"
      ],
      "nohoist": [
          "**/shared"
      ]
  },
  "scripts": {
      "workspace:build:shared": "yarn workspace uva-shared build",
      "workspace:pack:shared": "yarn workspace uva-shared pack",
      "workspace:build:functions": "yarn workspace uva-functions build",
      "workspace:build:frontend": "yarn workspace uva-frontend build",
      "workspace:start:shared": "yarn workspace uva-frontend start",
      "workspace:start:functions": "yarn workspace uva-functions start",
      "workspace:start:frontend": "yarn workspace uva-frontend start",
      "build:core": "yarn workspace:build:shared",
      "pack:core": "yarn workspace:pack:shared",
      "build:functions": "run-s workspace:build:core workspace:build:functions",
      "build:frontend": "run-s workspace:build:core workspace:build:frontend",
      "start:core": "yarn workspace:build:core",
      "start:functions": "run-s workspace:build:core workspace:start:functions",
      "start:frontend": "run-s workspace:build:core workspace:start:frontend",
      "deploy:functions": "firebase deploy --only functions",
      "deploy:frontend": "firebase deploy --only hosting",
      "web": "yarn workspace:build:frontend"
  },
  "devDependencies": {
      "npm-run-all": "^4.1.5",
      "rimraf": "^3.0.2"
  }
}