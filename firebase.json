{
  "functions": {
    "source": "packages/functions",
    "predeploy": [
      "yarn workspace:functions:lint",
      "yarn workspace:functions:build"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "hosting": {
    "public": "packages/frontend/dist",
    "predeploy": [
      "yarn workspace:frontend:build"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    }
  }
}