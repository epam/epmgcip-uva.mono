{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /*  Module */
    "module": "ESNext",
    "target": "ES2022",
    "resolveJsonModule": true,
    "moduleResolution": "node",

    /*  Output */
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false
  },
  "compileOnSave": true,
  "include": ["src"]
}
