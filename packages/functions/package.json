{
    "private": true,
    "name": "uva-functions",
    "version": "1.0.0",
    "license": "MIT",
    "main": "build/index.js",
    "scripts": {
        "lint": "eslint --ext .js,.ts .",
        "clear": "rimraf build",
        "build": "tsc",
        "build:watch": "tsc -w",
        "serve": "firebase serve --only functions",
        "serve:emulate": "firebase emulators:start --only functions,firestore",
        "watch:serve": "run-p build:watch serve",
        "watch:serve:emulate": "run-p build:watch serve:emulate",
        "clear:build:watch:serve": "run-s clear build:watch watch:serve",
        "shell": "yarn run build && firebase functions:shell",
        "start": "yarn run watch:serve:emulate",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "18"
    },
    "dependencies": {
        "@types/express": "^4.17.21",
        "axios": "^1.7.5",
        "express": "4.19.2",
        "firebase": "^10.7.1",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^4.8.1",
        "telegraf": "^4.16.3"
    },
    "devDependencies": {
        "@types/node-telegram-bot-api": "^0.64.7",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.9.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.25.4",
        "firebase-functions-test": "^3.1.0",
        "typescript": "^4.9.0"
    }
}
